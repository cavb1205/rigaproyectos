---
import Layout from "../layouts/Layout.astro";
import { getSiteConfig } from "../lib/wordpress.js";

const config = (await getSiteConfig()) || {};
---

<Layout title="Contacto | Riga Proyectos">
    <!-- Hero Section -->
    <section class="bg-primary text-white pt-32 pb-20 relative overflow-hidden">
        <div
            class="absolute top-0 right-0 text-[15rem] font-bold text-white opacity-5 pointer-events-none leading-none select-none"
        >
            C
        </div>
        <div class="container mx-auto px-4 relative z-10 text-center">
            <h1
                class="text-6xl md:text-8xl font-bold uppercase mb-6 tracking-tighter"
            >
                Estemos en <span class="text-accent">Contacto</span>
            </h1>
            <p
                class="text-xl text-gray-400 max-w-2xl mx-auto font-light uppercase tracking-widest leading-relaxed"
            >
                Cu√©ntanos tu proyecto y construyamos juntos el futuro de la
                infraestructura.
            </p>
        </div>
    </section>

    <section class="py-24 bg-construction relative">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <!-- Contact Information -->
                <div class="space-y-16 text-center">
                    <div>
                        <h2
                            class="text-4xl md:text-5xl font-bold text-primary uppercase mb-8 tracking-tight"
                        >
                            Informaci√≥n de <span class="text-accent"
                                >Contacto</span
                            >
                        </h2>
                        <p
                            class="text-lg text-gray-600 font-light mb-12 max-w-2xl mx-auto"
                        >
                            Estamos listos para atenderte desde nuestras
                            oficinas o a trav√©s de nuestros canales digitales.
                        </p>
                    </div>

                    <div class="grid sm:grid-cols-2 gap-8 text-left">
                        <!-- Address -->
                        {
                            config.direccion_oficina && (
                                <div class="card-construction p-10 border-t-4 border-accent">
                                    <span class="text-5xl mb-6 block">üìç</span>
                                    <h3 class="text-xs font-bold text-accent uppercase tracking-[0.2em] mb-3">
                                        Ubicaci√≥n
                                    </h3>
                                    <p class="text-primary font-medium text-lg leading-relaxed">
                                        {config.direccion_oficina}
                                    </p>
                                </div>
                            )
                        }

                        <!-- Phone -->
                        {
                            config.telefono_contacto && (
                                <div class="card-construction p-10 border-t-4 border-accent">
                                    <span class="text-5xl mb-6 block">üìû</span>
                                    <h3 class="text-xs font-bold text-accent uppercase tracking-[0.2em] mb-3">
                                        Tel√©fonos
                                    </h3>
                                    <div class="space-y-2">
                                        <a
                                            href={`tel:${config.telefono_contacto}`}
                                            class="text-primary font-bold text-xl block hover:text-accent transition"
                                        >
                                            {config.telefono_contacto}
                                        </a>
                                        {config.telefono_contacto_opcional && (
                                            <a
                                                href={`tel:${config.telefono_contacto_opcional}`}
                                                class="text-gray-500 font-light block hover:text-accent transition"
                                            >
                                                {
                                                    config.telefono_contacto_opcional
                                                }
                                            </a>
                                        )}
                                    </div>
                                </div>
                            )
                        }

                        <!-- Email -->
                        {
                            config.correo_electronico && (
                                <div class="card-construction p-10 border-t-4 border-accent">
                                    <span class="text-5xl mb-6 block">‚úâÔ∏è</span>
                                    <h3 class="text-xs font-bold text-accent uppercase tracking-[0.2em] mb-3">
                                        Correo Electr√≥nico
                                    </h3>
                                    <div class="space-y-2">
                                        <a
                                            href={`mailto:${config.correo_electronico}`}
                                            class="text-primary font-bold text-lg block hover:text-accent transition break-all"
                                        >
                                            {config.correo_electronico}
                                        </a>
                                        {config.correo_electronico_opcional && (
                                            <a
                                                href={`mailto:${config.correo_electronico_opcional}`}
                                                class="text-gray-500 font-light block hover:text-accent transition break-all text-sm"
                                            >
                                                {
                                                    config.correo_electronico_opcional
                                                }
                                            </a>
                                        )}
                                    </div>
                                </div>
                            )
                        }

                        <!-- WhatsApp -->
                        {
                            config.link_whatsapp && (
                                <div class="card-construction p-10 border-t-4 border-green-500">
                                    <span class="text-5xl mb-6 block">üí¨</span>
                                    <h3 class="text-xs font-bold text-green-600 uppercase tracking-[0.2em] mb-3">
                                        WhatsApp
                                    </h3>
                                    <p class="text-gray-500 text-sm mb-4">
                                        Atenci√≥n inmediata y personalizada.
                                    </p>
                                    <a
                                        href={config.link_whatsapp}
                                        target="_blank"
                                        class="inline-block bg-green-500 text-white font-bold px-8 py-3 rounded-sm hover:bg-construction-dark transition-colors duration-300 uppercase tracking-widest text-xs"
                                    >
                                        Chat Inmediato
                                    </a>
                                </div>
                            )
                        }
                    </div>

                    <!-- Social Links -->
                    <div class="pt-16 mt-8 border-t border-gray-100">
                        <div class="card-construction p-10 py-12">
                            <h3
                                class="text-xs font-bold text-accent uppercase tracking-[0.4em] mb-8 text-center"
                            >
                                Sigamos Conectados
                            </h3>
                            <div class="flex justify-center gap-8">
                                {
                                    config.link_instagram && (
                                        <a
                                            href={config.link_instagram}
                                            target="_blank"
                                            class="group flex flex-col items-center gap-3"
                                            title="Instagram"
                                        >
                                            <div class="w-14 h-14 bg-primary text-white flex items-center justify-center rounded-none group-hover:bg-accent group-hover:text-primary transition-all duration-300">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <rect
                                                        x="2"
                                                        y="2"
                                                        width="20"
                                                        height="20"
                                                        rx="5"
                                                        ry="5"
                                                    />
                                                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                                    <line
                                                        x1="17.5"
                                                        y1="6.5"
                                                        x2="17.51"
                                                        y2="6.5"
                                                    />
                                                </svg>
                                            </div>
                                            <span class="text-[10px] uppercase font-bold tracking-widest text-gray-400 group-hover:text-primary transition-colors">
                                                Instagram
                                            </span>
                                        </a>
                                    )
                                }
                                {
                                    config.link_facebook && (
                                        <a
                                            href={config.link_facebook}
                                            target="_blank"
                                            class="group flex flex-col items-center gap-3"
                                            title="Facebook"
                                        >
                                            <div class="w-14 h-14 bg-primary text-white flex items-center justify-center rounded-none group-hover:bg-accent group-hover:text-primary transition-all duration-300">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                                                </svg>
                                            </div>
                                            <span class="text-[10px] uppercase font-bold tracking-widest text-gray-400 group-hover:text-primary transition-colors">
                                                Facebook
                                            </span>
                                        </a>
                                    )
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map / Visual separator -->
    <section class="py-24 bg-primary text-white relative overflow-hidden">
        <!-- Technical Watermark Background -->
        <div class="absolute inset-0 opacity-10 pointer-events-none">
            <div
                class="absolute top-0 right-0 text-[25rem] font-bold leading-none font-bank -rotate-12 translate-x-1/4"
            >
                C
            </div>
            <div
                class="absolute bottom-0 left-0 text-[25rem] font-bold leading-none font-bank rotate-12 -translate-x-1/4"
            >
                CO
            </div>
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-3xl mx-auto text-center">
                <div class="flex flex-col items-center">
                    <span class="text-accent text-6xl mb-8">üèóÔ∏è</span>
                    <h2
                        class="text-4xl md:text-5xl font-bold uppercase tracking-tighter mb-6"
                    >
                        Presencia en toda <span class="text-accent"
                            >Colombia</span
                        >
                    </h2>
                    <div class="h-1 w-24 bg-accent mb-8"></div>
                    <p
                        class="text-xl text-gray-400 font-light uppercase tracking-[0.2em] leading-relaxed"
                    >
                        Construyendo con precisi√≥n y excelencia desde cada
                        rinc√≥n del pa√≠s para proyectar el futuro de la
                        infraestructura.
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>
